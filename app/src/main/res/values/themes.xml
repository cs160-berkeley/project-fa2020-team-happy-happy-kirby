<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CivilEngagement" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_variant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorSecondaryVariant">@color/secondary_blue_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="Theme.SplashScreen" parent="Theme.CivilEngagement">
        <item name="android:windowBackground">@drawable/img_updated_splash</item>
    </style>

    <style name="Theme.FullScreenDialog" parent="Theme.CivilEngagement">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Theme.Slide" parent="Theme.CivilEngagement">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Theme.Toolbar.Title" parent="">
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="Theme.Toolbar.Title.Blue" parent="">
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="Theme.Loading" parent="">
        <item name="fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="Theme.Event.Name" parent="">
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/_20sdp</item>
    </style>

    <style name="Theme.Event.Details" parent="">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="Theme.Event.Details.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="Theme.App.Logo" parent="">
        <item name="android:textSize">@dimen/_36sdp</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="fontFamily">@font/inter_extra_bold</item>
    </style>

    <style name="Theme.Toolbar.Colored" parent="">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.Toolbar.Colored.Blue" parent="">
        <item name="colorControlNormal">@color/primary_blue</item>
    </style>


    <style name="Widget.CivicEngagement.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.Chip.Choice</item>
    </style>

    <!-- Disabling elevation overlays because when chip's default background/surface
         composite are combined with elevation overlays in a highly elevated dialog,
         the resulting color becomes too light and causes contrast
         issues. -->
    <style name="ThemeOverlay.MyApp.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>
</resources>